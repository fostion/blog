<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IconTextView">
        <attr name="drawableLeftWidth" format="dimension|reference" />
        <attr name="drawableLeftHeight" format="dimension|reference" />
        <attr name="drawableLeftPadding" format="dimension|reference" />
        <attr name="drawableRightWidth" format="dimension|reference" />
        <attr name="drawableRightHeight" format="dimension|reference" />
        <attr name="drawableRightPadding" format="dimension|reference" />
        <attr name="drawableTopWidth" format="dimension|reference" />
        <attr name="drawableTopHeight" format="dimension|reference" />
        <attr name="drawableTopPadding" format="dimension|reference" />
        <attr name="drawableBottomWidth" format="dimension|reference" />
        <attr name="drawableBottomHeight" format="dimension|reference" />
        <attr name="drawableBottomPadding" format="dimension|reference" />
    </declare-styleable>


    <declare-styleable name="BubbleImageView">
        <!--箭头位置高度-->
        <attr name="bubble_arrowTop" format="dimension|reference" />
        <!--箭头宽度-->
        <attr name="bubble_arrowWidth" format="dimension|reference" />
        <!--箭头高度-->
        <attr name="bubble_arrowHeight" format="dimension|reference" />
        <!--箭头弯度-->
        <attr name="bubble_arrow_anger" format="dimension|reference" />
        <!--四边圆角-->
        <attr name="bubble_corner_radius" format="dimension|reference" />
        <attr name="bubble_arrowLocation" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources>